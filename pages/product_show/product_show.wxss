swiper{
  height: 892rpx;
}
swiper .slide-image{
  width: 670rpx;
  height: 100%;
  padding: 0 40rpx;
}

/* 商品信息 */
.info{
  padding: 0 40rpx;
}
.info .name{
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #333;
}
.info .star_code{
  font-size: 24rpx;
  color: #777;
}
.info .star_code .star{
  margin-top: 8rpx;
}
.info .star_code .code{
  margin-top: 8rpx;
}
.info .price{
  display: flex;
  align-items: flex-end;
}
.price .price_now{
  font-size: 50rpx;
  color: #c00;
  margin-right: 20rpx;
}
.price .price_before{
  font-size: 24rpx;
  color: #24292e;
  text-decoration: line-through;
}


/* 添加购物车 */
.cart{
  padding: 0 20rpx;
  margin-top: 20rpx;
  display: flex;
}

.add{
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
  padding: 0 20rpx;
  background: url('data:image/png;base64,') no-repeat center / 40rpx auto;
}