/* pages/comfirm_order/comfirm_order.wxss */
.address_bar{
  height: 182rpx;
  padding: 24rpx 20rpx 32rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  background: #fff;
}
.address_bar::after{
  content: "";
  width: 100%;
  height: 14rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #fff url(data:image/png;base64,) repeat-x -7px bottom /128rpx auto;
}
.address_bar .address_box{
  height: 100%;
  padding-right: 60rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #666;
}
.address_box::after{
  content: "";
  width: 12rpx;
  height: 20rpx;
  vertical-align: middle;
  background: url("data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 12 20%22%3E%3Cpath fill=%22#CCCCCC%22 fill-rule=%22evenodd%22 d=%22M2 20c-.8 0-1.5-.5-1.8-1.2-.3-.8-.2-1.6.4-2.2L7.2 10 .6 3.4c-.8-.8-.8-2 0-2.8.8-.8 2-.8 2.8 0l8 8c.4.4.6 1 .6 1.4 0 .5-.2 1-.6 1.4l-8 8c-.4.4-1 .6-1.4.6z%22/%3E%3C/svg%3E") no-repeat center / 100% auto;
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -10rpx;
}
.address_box.add_address_box{
  justify-content: center;
  font-size: 30rpx;
}
.address_box .contact{
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.contact .name{
  font-weight: 700;
  margin-right: 5rpx;
}

.address_box .adress{
  font-size: 28rpx;
}

/* 商品信息 */
.product_box{
  padding: 30rpx 0;
  background: #f7f7f7;
  margin-top: 182rpx;
}
.product_box .product_info{
  padding: 0 20rpx;
  display: flex;
  justify-content: flex-start;
  padding-top: 30rpx;
  font-size: 24rpx;
  position: relative;
  background: #fff;
}
.product_info .image{
  position: absolute;
  left: 20rpx;
  top: 40rpx;
  width: 150rpx;
  height: 150rpx;
  /* padding-left: 20rpx; */
}
.product_info .product_detail{
  padding-bottom: 10rpx;
  padding-left: 170rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.product_detail .name{
  line-height: 40rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkir-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #333;
}
.product_detail .sku{
  display: flex;
  flex-direction: row;
  color: #999;
}
.product_detail .sku .sku_info{
  margin-right: 10rpx;
}
.product_detail .price_num{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.price_num .price{
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  color: #e93b3d;
  font-size: 20rpx
}
.price .int{
  font-size: 32rpx;
}
.price_num .num{
  display: flex;
  align-items: center;
}
.num .btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* color: #999; */
  border: none;
}
.num .minus_disable{
  color: #eee;
}
.num input.num {
  font-size: 24rpx;
  width: 90rpx;
  height: 60rpx;
  background: #f8f8f8;
  margin: 0 2rpx;
  color: #999;
  text-align: center;
}

/* 价格小计 */
.total{
  padding: 20rpx;
  font-size: 28rpx;
}
.total .total_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 42rpx;
}
.total_item .total_item_text{
  color: #333;
}
.total_item .total_item_price{
  color: #e93b3d;
}



/* 支付按钮 */
.pay_btn{
  padding: 20rpx 100rpx;
  /* display: flex;
  justify-content: center;
  align-items: center; */
}
.pay_btn .btn{
  padding: 0 30rpx;
}