/* pages/address/address.wxss */
.address_bar{
  height: 182rpx;
  padding: 24rpx 20rpx 32rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
}
.address_bar::after{
  content: "";
  position: absolute;
  height: 2rpx;
  background: #f7f7f7;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 0 -20rpx;
}
.address_box{
  height: 100%;
  padding: 0 60rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 28rpx;
  line-height: 42rpx;
  color: #666;
}
.address_box::after{
  content: "";
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  background: url(data:image/png;base64,) no-repeat center center /100% auto;
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -10rpx;
}
.address_box .check{
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #999;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 0;
  vertical-align: middle;
  margin-top: -20rpx;
}
.address_box .checked{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 0;
  vertical-align: middle;
  margin-top: -20rpx;
  background: url(data:image/png;base64,) no-repeat 50% / 42rpx;
}

.address_box .contact{
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.contact .name{
  font-weight: 700;
  margin-right: 5rpx;
}

.address_box .adress{
  font-size: 28rpx;
}








.add_address{
  width: 100%;
  height: 92rpx;
  color: #fff;
  background: #e4393c;
  line-height: 92rpx;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
}