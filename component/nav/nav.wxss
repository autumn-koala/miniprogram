/* component/nav/nav.wxss */
.navBox{
  width: 520rpx;
  height: 204rpx;
  position: fixed;
  bottom: 100rpx;
  right: -520rpx;
  z-index: 9999;
  background: red;
  transition: transform .5s ease;
}
.nav{
  width: 100%;
  height: 100%;
  padding: 30rpx 0 10rpx;
  background: #fff;
  position: absolute;
  float: left;
}
.btn {
  width: 90rpx;
  height: 80rpx;
  position: absolute;
  left: -90rpx;
  top: 50%;
  background: #666;
  border-radius: 8rpx;
  transition: transform 0.8s ease;
}
.btn::before{
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  width: 40px;
  height: 40px;
  margin-top: -20px;
  background: url(data:image/png;base64,) no-repeat 0 0 / 100%;
}
.btn .i{
  width: 44rpx;
  font-size: 20rpx;
  line-height: 26rpx;
  color: #fff;
  position: absolute;
  left: 40rpx;
  top: 20%;
}
.navBox.open{
  transform: translateX(-520rpx);
}

.guid{
  width: 130rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx 0;
  font-size: 20rpx;
}
.guid .icon{
  width: 40rpx;
  height: 40rpx;
  background: url('/images/index.png');
  margin: 0 auto;
}